{
  "name": "eslint-config-mercari",
  "version": "0.2.0",
  "description": "A setting file for eslint.",
  "main": "index.js",
  "scripts": {
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "test": "nyc ava",
    "lint": "eslint -c ./rules/base.js ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mercari/eslint-config-mercari.git"
  },
  "keywords": [
    "eslint",
    "react",
    "flow"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mercari/eslint-config-mercari/issues"
  },
  "homepage": "https://github.com/mercari/eslint-config-mercari#readme",
  "devDependencies": {
    "ava": "^0.19.1",
    "conventional-changelog": "^1.1.4",
    "eslint": "^3.19.0",
    "nyc": "^11.0.2"
  },
  "dependencies": {
    "babel-eslint": "^7.2.3",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.1.0"
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "tap": true
  }
}
