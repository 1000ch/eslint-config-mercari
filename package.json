{
  "name": "eslint-config-mercari",
  "version": "0.0.1",
  "description": "A setting file for eslint.",
  "main": "index.js",
  "scripts": {
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "test": "nyc ava",
    "lint": "eslint -c ./rules/base.js ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mercari/eslint-config-mercari.git"
  },
  "keywords": [
    "eslint",
    "react",
    "flow"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mercari/eslint-config-mercari/issues"
  },
  "homepage": "https://github.com/mercari/eslint-config-mercari#readme",
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "tap": true
  },
  "devDependencies": {
    "ava": "^1.0.0-beta.6",
    "babel-eslint": "^9.0.0",
    "conventional-changelog-cli": "^1.3.1",
    "eslint": "^5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.2.1",
    "nyc": "^13.0.0"
  },
  "peerDependencies": {
    "babel-eslint": "^9.0.0",
    "eslint": "^5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.2.1"
  }
}
